<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Permohonan Surat RT 007</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script>
    function updateForm() {
      const jenis = document.getElementById("jenis").value;
      document.querySelectorAll(".form-section").forEach(el => el.style.display = "none");
      if (jenis === "domisili") {
        document.getElementById("form-domisili").style.display = "block";
      } else if (jenis === "pengantar") {
        document.getElementById("form-pengantar").style.display = "block";
      } else if (jenis === "kematian") {
        document.getElementById("form-kematian").style.display = "block";
      }
    }

    function updateAlamat() {
      const blok = document.getElementById("blok").value.trim();
      const nomor = document.getElementById("nomor").value.trim();
      const alamat = `Cikarang Pass Residence Blok ${blok} No ${nomor} RT 007 RW 015\nKel. Sukadami Kec. Cikarang Selatan Kab. Bekasi`;
      document.getElementById("alamat").value = alamat;
    }

    window.addEventListener("DOMContentLoaded", () => {
      updateForm();
      document.getElementById("blok").addEventListener("input", updateAlamat);
      document.getElementById("nomor").addEventListener("input", updateAlamat);
    });
  </script>
</head>
<body class="bg-light">
  <div class="container-sm px-3 py-4">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Permohonan Surat RT 007</h5>
      </div>
      <div class="card-body">
        <form action="/generate" method="POST">
          <div class="mb-3">
            <label for="jenis" class="form-label">Jenis Surat</label>
            <select name="jenis" id="jenis" class="form-select" onchange="updateForm()" required>
              <option value="domisili">Surat Domisili</option>
              <option value="pengantar">Surat Pengantar</option>
              <option value="kematian">Surat Kematian</option>
            </select>
          </div>

          <!-- Input Umum -->
          <div class="mb-3">
            <label class="form-label">NIK (No KTP)</label>
            <input type="text" name="nik" class="form-control" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Nama Lengkap</label>
            <input type="text" name="nama" class="form-control" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Tempat / Tanggal Lahir</label>
            <input type="text" name="ttl" class="form-control" placeholder="Contoh: Bekasi, 12 Januari 1980" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Agama</label>
            <select name="agama" class="form-select" required>
              <option value="" disabled selected>Pilih Agama</option>
              <option value="Islam">Islam</option>
              <option value="Kristen">Kristen</option>
              <option value="Katolik">Katolik</option>
              <option value="Hindu">Hindu</option>
              <option value="Buddha">Buddha</option>
              <option value="Konghucu">Konghucu</option>
            </select>
          </div>


          <div class="mb-3">
            <label class="form-label">Kewarganegaraan</label>
            <input type="text" name="kewarganegaraan" class="form-control" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Pekerjaan</label>
            <input type="text" name="pekerjaan" class="form-control" required>
          </div>

          <!-- Form Khusus Domisili -->
          <div id="form-domisili" class="form-section" style="display:none">
            <div class="mb-3 row">
              <div class="col-md-6 mb-2">
                <label class="form-label">Blok</label>
                <input type="text" id="blok" name="blok" class="form-control" placeholder="Contoh: F1">
              </div>
              <div class="col-md-6 mb-2">
                <label class="form-label">Nomor Rumah</label>
                <input type="text" id="nomor" name="nomor" class="form-control" placeholder="Contoh: 18">
              </div>
            </div>
          </div>

          <!-- Alamat Lengkap -->
          <div class="mb-3">
            <label class="form-label">Alamat Lengkap</label>
            <textarea name="alamat" id="alamat" class="form-control" rows="2" readonly required></textarea>
          </div>

          <!-- Form Khusus Pengantar -->
          <div id="form-pengantar" class="form-section" style="display:none">
            <div class="mb-3">
              <label class="form-label">Keperluan</label>
              <input type="text" name="keperluan" class="form-control" placeholder="Contoh: Melamar pekerjaan / Mengurus KK">
            </div>
          </div>

          <!-- Form Khusus Kematian -->
          <div id="form-kematian" class="form-section" style="display:none">
            <div class="mb-3">
              <label class="form-label">Hari & Tanggal Meninggal</label>
              <input type="text" name="tanggal_meninggal" class="form-control" placeholder="Contoh: Senin, 1 Juli 2025">
            </div>
            <div class="mb-3">
              <label class="form-label">Tempat Meninggal</label>
              <input type="text" name="tempat_meninggal" class="form-control" placeholder="Contoh: Rumah / RSUD Cikarang">
            </div>
            <div class="mb-3">
              <label class="form-label">Tempat Pemakaman</label>
              <input type="text" name="pemakaman" class="form-control" placeholder="Contoh: TPU Sukadami">
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Tanggal Permohonan</label>
            <input type="text" name="tanggal" class="form-control" placeholder="Contoh: 2 Juli 2025" required>
          </div>

          <button type="submit" class="btn btn-success w-100">Buat Surat</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
